<h1 class= "text-center padding"> Popular Movies </h1>
<div class="results flex results_poster_card border border-primary">
  <% @movies.results.each do |m|  %>
    <div class="item poster card">
      <h3 class = "mx-auto d-block" > <%= link_to m.original_title, movie_path(m.id) %></h3>
      <div class="image_content ">
        <% if m.backdrop_path != nil %>
          <% image = @image + m.backdrop_path %>
          <%= image_tag(image, :class => "mx-auto d-block picture") %>
        <% end %>
      </div>
      <div class= "info">
          <div class = "overview">
          <p><%= m.overview %> </p>
          <p class="float">Rating: <%= m.vote_average %>/10.0</p>
          <p>Release Date: <%= m.release_date %></p>

            <p><%= link_to "More Info", movie_path(m.id) %></p>
          </div>

        </div>
    </div>
  <% end %>
</div>
 <div>
   <p class="left">
  <% if @movies.page >= 2 %>
    <%= link_to "Previous Page", movies_path(:page => @movies.page.to_i - 1 ) %>
  <% end %>
  </p>
   <p class="center">
    Currently on Page: <%= @movies.page %> of 1000

  </p>
    <p class="right">
  <% if @movies.page < 1000 %>
    <%= link_to "Next Page", movies_path(:page => @movies.page.to_i + 1 ) %>
  <% end %>
  </p>

</div>
